@model Ride

<h2>Ride Details</h2>

<p>Ride ID: @Model.RideID</p>
<p>Departure Location: @Model.DepartureLocation</p>
<p>Destination: @Model.Destination</p>
<p>Date and Time: @Model.DateTime</p>
<p>Maximum Capacity: @Model.MaximumCapacity</p>
<p>Joined Commuters: @ViewBag.JoinedCommuters</p>
<p>Available Seats: @ViewBag.AvailableSeats</p>

@Html.ActionLink("Back to Available Rides", "AvailableRides", "Ride")
