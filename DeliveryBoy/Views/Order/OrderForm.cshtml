@model Order

<h2>Order Form</h2>

<form method="post">
    <div>
        <label for="cus_name">Customer Name:</label>
        <input type="text" id="cus_name" name="cus_name" required>
    </div>
    <div>
        <label for="cus_number">Contact Number:</label>
        <input type="text" id="cus_number" name="cus_number" required>
    </div>
    <div>
        <label for="location">Location :</label>
        <input type="text" id="location" name="location" required>
    </div>
    <div>
        <label for="amount">Amount:</label>
        <input type="number" id="amount" name="amount" required>
    </div>
    <button type="submit">SUBMIT</button>
</form>
<a asp-controller="Delivery" asp-action="AvailableOrders" class="btn btn-primary">View Deliveries</a>
