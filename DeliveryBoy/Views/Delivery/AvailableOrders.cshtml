@model List<Order>

<h2>Orders Ready to Delivery</h2>

<div>
    <h3>Delivered :   Pending :  Out for Delivery :  In Transit :  </h3>
</div>

@if (Model.Any())
{
    <table class = "table">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Contact Number</th>
                <th>Location</th>
                <th>Amount</th>
                <th>Delivery Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CustomerName</td>
                    <td>@order.ContactNumber</td>
                    <td>@order.Location</td>
                    <td>@order.Amount</td>
                    <td>
@Html.DropDownList("OrderStatus", new List<SelectListItem>
{
   new SelectListItem{ Text="Pending", Value = "1" },
   new SelectListItem{ Text="Out for Delivery", Value = "2" },
   new SelectListItem{ Text="Delivered", Value = "3" },
   new SelectListItem{ Text="In Transit", Value = "4" }
})
</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Orders have been booked.</p>
}
 <a asp-controller="Order" asp-action="OrderForm" class="btn btn-primary">Add Order</a>
